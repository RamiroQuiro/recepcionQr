---
import Layout from "../../layouts/Layout.astro";
import Formulario from "./components/Formulario";
---

<Layout title="Carga de credenciales Acceso">
  <main
    class="relative min-h-screen w-full flex flex-col gap-10 items-center justify-start mt-20"
  >
    <div
      class="md:w-2/3 md:h-1/2 bg-white/80 backdrop-blur-sm flex flex-col p-5 rounded-lg items-center relative justify-normal"
    >
      <a
        href="/credenciales"
        class="text-2xl  absolute top-4 left-4 rounded-full  bg-gray-200 border border-paleta1-primary hover:bg-gray-300 hover:text-gray-500 px-2 h-10 flex items-center justify-center  border-gray-700/50 hover:-translate-x-1 duration-300 hover:scale-105 active:scale-90 shadow-lg text-gray-700"
        >‚Üê</a>
      <div class="text-center">
        <h2 class="mt-5 text-lg font-bold text-gray-700">Carga Credencial</h2>
        <p class="mt-2 text-sm text-gray-400">
          Sube el video e indica el la mesa a relacionar
        </p>
      </div>
      <Formulario client:load />
    </div>
  </main>
</Layout>
