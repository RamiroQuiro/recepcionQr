---

import Layout from "../../layouts/Layout.astro";
import Formulario from "./components/Formulario";

---

<Layout title="Welcome to Astro.">
<main class=" min-h-screen w-full flex flex-col items-center justify-center">
<div class="w-1/2 h-1/2  bg-white/80  backdrop-blur-sm flex flex-col p-5 rounded-lg items-center justify-normal">
    <div class="text-center">
        <h2 class="mt-5 text-3xl font-bold text-gray-700">
            Sube un video
        </h2>
        <p class="mt-2 text-sm text-gray-400">Sube el video e indica el la mesa a relacionar</p>
    </div>
    <Formulario client:load/>
</div>

</main>
</Layout>