---
import Layout from "../../layouts/Layout.astro";
const { uid } = Astro.params;
import CardVideos from "./components/CardVideos.astro";
import VideosCargados from "./components/VideosCargados.astro";
const objectEvento = await fetch(`http://localhost:4321/api/${uid}`);
const data = await objectEvento.json();
const evento = data.files;
---

<Layout title="eventos">
  <main
    class="min-h-screen w-10/12 container flex flex-col pt-10 items-start justify-normal"
  >
    <div class="flex w-full items-center justify-between p">
      <div class="flex items-center justify-around w-1/4">
        <a href="/" class="text-2xl rounded-full bg-paleta1-primary w-10 h-10 flex items-center justify-center border border-gray-700/50 hover:-translate-x-1 duration-300 hover:scale-105 active:scale-90  shadow-lg  text-gray-700">‚Üê</a>
        <h1 class="text-3xl font-bold capitalize text-gray-700 my-10">
          {evento?.nombre}
        </h1>
      </div>
    </div>

    {
      evento?.videos?.length > 0 ? (
        <div class="flex items-center flex-wrap justify-evenly w-full gap-5 ">
          <div class="w-72 h-72 bg-white p-2 rounded-lg overflow-hidden flex items-center flex-col">
            <img src={evento.path} alt="portada" class="object-cover "/>
            <p class="text-sm px-2 capitalize text-gray-700 -translate-y-8 bg-white rounded ">portada</p>
          </div>
          {evento.videos?.map((video) => (
            <CardVideos video={video} uidEvento={evento?.uid} />
          ))}
        </div>
      ) : (
        <div class="text-left">
            <div class="w-72 h-72 bg-white p-2 rounded-lg overflow-hidden flex items-center flex-col">
            <img src={evento.path} alt="portada" class="object-cover w-full h-full"/>
            <p class="text-sm px-2 capitalize text-gray-700 -translate-y-8 bg-white rounded ">portada</p>
          </div>
          <h2 class="mt-5 text-3xl font-bold text-gray-700">Sube un Video!</h2>
          <p class="mt-2 text-sm text-gray-900 font-medium">
            No hay videos que mostrar, para realizar una carga, dirigete a
            cargar Videos
          </p>
        </div>
      )
    }
  </main>
</Layout>
