<div
  id="mensaje-modal"
  class="duration-500 z-50 h-screen fixed text-gray-700 hidden items-center justify-center"
>
  <div
    class="text-center z-30 flex items-center relative capitalize text-sm font-thin flex-col justify-center gap-5 h-52 w-1/3 p-5 bg-white rounded-lg"
  >
    <div
      class="text-center z-30 flex items-center flex-col justify-center gap-5 h-full"
    >
      <p id="textoModal"></p>
      <div class="modal-buttons flex items-center gap-3">
        <button
          id="botonAceptar"
          class="px-2 py-1 rounded-lg bg-blue-500 capitalize text-white hover:bg-blue-400 duration-300"
          >Confirmar</button
        >
        <button
          id="botonCerrarModal"
          class="px-2 py-1 rounded-lg bg-blue-500 capitalize text-white hover:bg-blue-400 duration-300"
          >Cancelar</button
        >
      </div>
    </div>
  </div>
</div>
